extends layout.pug

block content
  .container.row.col-md-offset-2.col-md-8
    if tasks.length !== 0
      p #{tasks.length} tasks completed
      table.table.table-bordered.table-completed
        thead
          tr
            th Name task
            
        tbody
          each task, index in tasks
            tr
              th.item-th= task.title
    else
      div.empty-tasks
      p No tasks
